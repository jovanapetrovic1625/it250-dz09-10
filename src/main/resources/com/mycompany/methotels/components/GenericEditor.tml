<html t:type="layout" title="Genericki editor"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	
    <t:beaneditform object="bean"/>
	
    <t:grid source="grid" add="edit,delete" row="row">
        <p:editCell>
            <t:actionlink t:id="edit" t:context="${row.getId()}">Edit</t:actionlink>
        </p:editCell> 
        <p:deleteCell>
            <t:actionlink t:id="delete" t:context="${row.getId()}">Delete</t:actionlink> 
        </p:deleteCell>
    </t:grid> 
    
</html>